@page "/replace"
@inject ReplaceViewModel viewModel

    <div class="container">
        <h2>Regex Replace</h2>

        <div class="form-group">
            <label for="input" class="font-weight-bold">Input:</label>
            <input id="input"
                   class="form-control"
                   type="text"
                   @bind-value="viewModel.InputReplace" @bind-value:event="oninput" />
        </div>
        <div class="form-group">
            <label for="pattern" class="font-weight-bold">Pattern:</label>
            <input id="pattern"
                   class="form-control"
                   type="text"
                   @bind-value="viewModel.RegexReplacePattern" @bind-value:event="oninput" />
        </div>
        <div class="form-group">
            <label for="replace" class="font-weight-bold">Replace:</label>
            <input id="replace"
                   class="form-control"
                   type="text"
                   @bind-value="viewModel.RegexReplaceWith" @bind-value:event="oninput" />
        </div>
        <p></p>
        <label class="font-weight-bold">Output:</label>
        <div class="card card-body bg-light">
            <h4>@viewModel.OutputReplace</h4>
        </div>
        <br />
    </div>

